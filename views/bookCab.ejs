<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b4b1828725.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/public/css/client.css">
    <title>Book Cab</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="position: absolute; z-index: 2; width: 100%; background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="main">
        <div class="inmain">
            <div class="inmain-wrapper">
                <div class="search">
                    <a href="/bookCab/go"><button>Go</button></a>
                    <a href="/bookCab/pro"><button>Pro</button></a>
                    <a href="/bookCab/premium"><button>Premium</button></a>
                    <form method="POST" action="/bookCab">
                        <div>
                        </div>
                        <input type="text" name="type" placeholder="Pickup">
                        <input type="text" name="capacity" placeholder="Destination">
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>

                </div>
                <table class="table table-hover" id="jsonTable">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Car No</th>
                            <th scope="col">Type</th>
                            <th scope="col">Capacity</th>
                            <th scope="col">book</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if(cabs !== null) { %>
                            <% for(var i=0; i < cabs.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= cabs[i].name %>
                                    </td>
                                    <td>
                                        <%= cabs[i].carNo %>
                                    </td>
                                    <td>
                                        <%= cabs[i].type %>
                                    </td>
                                    <td>
                                        <%= cabs[i].capacity %>
                                    </td>
                                    <td>
                                        <a href=" <%='/bookCab/?id='+cabs[i].id %>">
                                            <button>Book</button>
                                        </a>
                                        <!-- <form action="/clientmMain" method="get"></form>
                                    <input "type="text" name="id" >
                                    <button type="submit">Book</button> -->
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>

                    </tbody>
                </table>


            </div>
        </div>
    </div>

    <script src="./public/script.js"></script>
</body>

</html>